@model TaskList

@using (@Html.BeginFieldset("TaskList", new { id = "taskListForm" }))
{
    <div class="control-group">
        @Html.Label("Title", "Title", new { @class = "control-label" })
        <div class="controls">
            @Html.TextBoxFor(n => n.Title, new { @class = "input-xlarge", placeholder = "Type the title" })
        </div>
    </div>
}