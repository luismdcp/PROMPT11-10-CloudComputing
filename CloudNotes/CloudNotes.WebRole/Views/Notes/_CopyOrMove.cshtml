@model IEnumerable<TaskList>

@using (@Html.BeginFieldset("TaskLists", new { id = "taskListsForm" }))
{
    <table class="table table-striped table-bordered table-condensed">
        <thead>
            <tr>
                <th>&nbsp;</th>
                <th>Title</th>
                <th>Created At</th>
            </tr>
        </thead>

        @foreach (var taskList in Model)
        {
            var taskListId = string.Format("{0}+{1}", taskList.PartitionKey, taskList.RowKey);
            
            <tr>
                <td>
                    <input type="radio" name="taskListCheck" value="@taskListId" />
                </td>
                <td>@taskList.Title</td>
                <td>@taskList.Timestamp.ToShortDateString()</td>
            </tr>
        }
    </table>       
}