@model Note
           
@using (@Html.BeginFieldset("Note", new { id = "noteForm" }))
{
    <div class="control-group">
        @Html.Label("Title", "Title", new { @class = "control-label" })
        <div class="controls">
            @Html.TextBoxFor(n => n.Title, new { @class = "input-xlarge", value = "@Model.Title", disabled = "disabled" })
        </div>
    </div>
    <div class="control-group">
        @Html.Label("Content", "Content", new { @class = "control-label" })
        <div class="controls">
            @Html.TextAreaFor(n => n.Content, 5, 5, new { @class = "input-xlarge", disabled="disabled" })
        </div>
    </div>
    <div class="control-group">
        @Html.Label("Closed?", "IsClosed", new { @class = "control-label" })
        <div class="controls">
            @Html.CheckBoxFor(n => n.IsClosed, new { @class = "checkbox", disabled="disabled" })
        </div>
    </div>
}