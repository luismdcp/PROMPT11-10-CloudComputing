@model IEnumerable<User>

@using (@Html.BeginFieldset("Users"))
{
    <table class="table table-striped table-bordered table-condensed">
        <thead>
            <tr>
                <th>&nbsp;</th>
                <th>Name</th>
                <th>Email</th>
            </tr>
        </thead>

        @foreach (var user in Model)
        {
            <tr>
                <td>
                    <input type="radio" name="userCheck" value="@user.RowKey" />
                </td>
                <td>@user.Name</td>
                <td>@user.Email</td>
            </tr>
        }
    </table>       
}