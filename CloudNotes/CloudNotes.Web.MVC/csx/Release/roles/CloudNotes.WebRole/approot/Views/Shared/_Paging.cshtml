<p>
    @if (Model.HasPreviousPage)
    {
        @Ajax.ActionLink("<< First", "Index", new { page = 1, sortOrder = ViewBag.CurrentSortOrder }, 
                                              new AjaxOptions { UpdateTargetId = "main", Url = Url.Action("Index", new { page = 1, sortOrder = ViewBag.CurrentSortOrder }) }) 
        @Html.Raw("&nbsp;");
        @Ajax.ActionLink("< Prev", "Index", new { page = Model.PageNumber - 1, sortOrder = ViewBag.CurrentSortOrder }, 
                                            new AjaxOptions { UpdateTargetId = "main", Url = Url.Action("Index", new { page = Model.PageNumber - 1, sortOrder = ViewBag.CurrentSortOrder }) })
    }
    else
    {
        @:<< First
        @Html.Raw("&nbsp;")
        @:< Prev
    }

    &nbsp;&nbsp;
    
    @if (Model.HasNextPage)
    {
        @Ajax.ActionLink("Next >", "Index", new { page = Model.PageNumber + 1, sortOrder = ViewBag.CurrentSortOrder }, 
                                            new AjaxOptions { UpdateTargetId = "main", Url = Url.Action("Index", new { page = Model.PageNumber + 1, sortOrder = ViewBag.CurrentSortOrder }) })
        @Html.Raw("&nbsp;");
        @Ajax.ActionLink("Last >>", "Index", new { page = Model.PageCount, sortOrder = ViewBag.CurrentSortOrder },
                                             new AjaxOptions { UpdateTargetId = "main", Url = Url.Action("Index", new { page = Model.PageCount, sortOrder = ViewBag.CurrentSortOrder })  })
    }
    else
    {
        @:Next >
        @Html.Raw("&nbsp;")
        @:Last >>
    }
</p>